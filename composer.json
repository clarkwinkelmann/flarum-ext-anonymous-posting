{
    "name": "clarkwinkelmann/flarum-ext-anonymous-posting",
    "description": "Anonymous discussions and replies for logged in users",
    "keywords": [
        "flarum",
        "anonymous"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "flarum/core": "^1.2",
        "ext-json": "*"
    },
    "require-dev": {
        "flarum/mentions": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-anonymous-posting",
        "forum": "https://discuss.flarum.org/d/31151"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\AnonymousPosting\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Anonymous Posting",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-secret",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/mentions",
                "kilowhat/flarum-ext-formulaire"
            ]
        }
    }
}
